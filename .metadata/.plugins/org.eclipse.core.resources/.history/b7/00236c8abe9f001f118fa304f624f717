// Importación de librerías (aquí importamos una librería para trabajar con Scanner)
import java.util.Scanner;

// Definición de la clase principal
public class Ejemplo1 {

    // Método principal donde inicia el programa
    public static void main(String[] args) {
        
        // Declaración de variables
        String nombre;
        int edad;
        
        // Crear un objeto de la clase Scanner para recibir datos de entrada
        Scanner scanner = new Scanner(System.in);

        // Cuerpo del código: Pedir datos al usuario
        System.out.print("Ingrese su nombre: ");
        nombre = scanner.nextLine();  // Lee una línea de texto y la almacena en nombre

        System.out.print("Ingrese su edad: ");
        edad = scanner.nextInt();  // Lee un entero y lo almacena en edad

        // Cerrar el objeto Scanner
        scanner.close();

        // Mostrar el resultado con System.out.println
        System.out.println("Hola, " + nombre + ". Tienes " + edad + " años.");
    }
}